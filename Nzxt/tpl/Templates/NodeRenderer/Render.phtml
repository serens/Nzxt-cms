                    <span class="cms content-type">
                        <?php if ($content): ?>
                            <?= $content->getTitle() ?>:
                        <?php else: ?>
                            Node:
                        <?php endif; ?>
                    </span>

                    <span class="cms title">
                        "<?= htmlspecialchars($node->getTitle()) ?>"
                    </span>
                </a>
            </div>

