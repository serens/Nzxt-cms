<?php if ($firstNode): ?>
    <?php if (!$hasBodyTag): ?>
        <!DOCTYPE html>
        <html class="no-js" lang="en" dir="ltr">
            <head>
                <title><?= htmlspecialchars($node->getTitle()) ?> | Nzxt cms</title>

                <meta http-equiv="X-UA-Compatible" content="IE=Edge">
                <meta charset="utf-8">
